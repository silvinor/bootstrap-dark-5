{
    "compilerOptions": {
        "target": "ES2015",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "removeComments": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "../dist/js",
        "rootDir": "../js/src",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false
    },
    "include": [
        "../js/src/"
    ],
    "exclude": [
        "../dist/js/"
    ]
  }
